%h3.text-center= t('.title')
- @menus.each do |menu|
  .card.mt-2
    .card-body
      %p= menu.name
      %p= menu.created_at.strftime('%d.%m.%Y')
      = link_to t('.show'), menu_path(menu)
- if current_user.admin?
  = link_to t('.add_today_menu'), new_menu_path, class: 'btn btn-outline-success mt-2'
