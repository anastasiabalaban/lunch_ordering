.col-md-5.mx-auto
  %h3.text-center= t('.title')
  = simple_form_for(resource, as: resource_name, url: registration_path(resource_name), html: { method: :put }) do |f|
    = f.input :name
    = f.input :email
    = f.input :password, hint: t('devise.shared.minimum_password_length', count: @minimum_password_length), label: t('.leave_blank_if_you_don_t_want_to_change_it')
    = f.input :password_confirmation
    = f.input :current_password, hint: t('.we_need_your_current_password_to_confirm_your_changes')
    = f.button :submit, class: 'btn btn-outline-success'
  %h4.text-center.mt-3= t('.cancel_my_account')
  %p= t('.unhappy')
  = link_to t('.cancel_my_account'), registration_path(resource_name), data: { confirm: t('.are_you_sure') }, method: :delete, class: 'btn btn-outline-danger'
  %br
  = link_to t('.back'), :back, class: 'btn btn-light mt-2'
